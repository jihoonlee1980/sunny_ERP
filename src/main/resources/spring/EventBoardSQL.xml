<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com">
	<insert id="insertEventBoard" parameterType="com.menu.model.EventBoardDTO">
		insert into erp_board values(0, #{writer}, #{subject}, #{category}, #{content}, #{filename}, 0, now(), 1)
	</insert>
	<update id="updateEventBoard" parameterType="com.menu.model.EventBoardDTO">
		update erp_board set subject = #{subject}, category = #{category}, content = #{content}, filename = #{filename} where num = #{num}
	</update>
	<delete id="deleteEventBoard" parameterType="int">
		delete from erp_board where num = #{num}
	</delete>
	<update id="updateReadCount" parameterType="int">
		update erp_board set readcount = readcount + 1 where num = #{num}
	</update>
	<select id="eventBoardCount" resultType="int">
		select count(*) from erp_board where delim = 1
	</select>
	<select id="eventBoardList" resultType="com.menu.model.EventBoardDTO" parameterType="HashMap">
		select * from erp_board where delim=1 order by writeday desc limit #{start} , #{perpage}
	</select>
	<select id="eventBoardContent" resultType="com.menu.model.EventBoardDTO" parameterType="int">
		select * from erp_board where num = #{num}
	</select>
</mapper>